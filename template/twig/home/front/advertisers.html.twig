{% set image_size = 'thumbnail' %}
<div class="container">
    <div class="row">
        {% for item in items %}
            <article class="col-6 col-md-4 col-lg-2 mb-5">
                <a href="{{ item.link|esc_url }}" class="d-block on-hover position-relative overflow-hidden"{% if item.rel is not empty %} rel="{{ item.rel|esc_attr }}"{% endif %}>
                    {{ wp_get_attachment_image(item.first_image, image_size, {class: 'w-100'})|raw }}
                    <div class="position-absolute w-100 top-0 left-0 show-fade">
                        {{ wp_get_attachment_image(item.second_image, image_size, {class: 'w-100'})|raw }}
                        <h3 class="fs-xs p-2 m-0 bg-overlay primary-60 max-line max-line-2 text-white move-up">{{ item.title|raw }}</h3>
                    </div>
                </a>
            </article>
        {% endfor %}
    </div>
</div>
